<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent" android:layout_width="match_parent" android:weightSum="2" android:orientation="vertical" android:layout_gravity="center" android:padding="20dp">
    <TextView android:id="@+id/resultTextView" android:layout_height="0dp" android:layout_margin="4dp" android:layout_width="match_parent" android:autoSizeTextType="uniform" android:text="" android:background="#544B63" android:layout_weight="0.25"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1.75" android:weightSum="5" android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:weightSum="4" android:orientation="horizontal">
            <Button android:id="@+id/openParenthesis" android:layout_width="0dp" android:layout_weight="1" android:text="(" android:textColor="@color/white" android:backgroundTint="#290071" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
            <Button android:id="@+id/closeParenthesis" android:layout_width="0dp" android:layout_weight="1" android:text=")" android:backgroundTint="#290071" android:textColor="@color/white" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
            <Button android:id="@+id/percentage" android:layout_width="0dp" android:layout_weight="1" android:backgroundTint="#290071" android:text="%" android:textColor="@color/white" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp"/>
            <Button android:id="@+id/AC" android:layout_width="0dp" android:text="AC" android:textColor="@color/white" android:backgroundTint="#290071" android:autoSizeTextType="uniform" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="2dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:weightSum="4" android:orientation="horizontal">
            <Button android:id="@+id/numberSeven" android:layout_width="0dp" android:layout_weight="1" android:text="7" android:textColor="@color/white" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
            <Button android:id="@+id/numberEight" android:layout_width="0dp" android:layout_weight="1" android:text="8" android:textColor="@color/white" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
            <Button android:id="@+id/numberNine" android:layout_width="0dp" android:layout_weight="1" android:text="9" android:textColor="@color/white" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
            <Button android:id="@+id/division" android:layout_width="0dp" android:layout_weight="1" android:text="/" android:backgroundTint="#290071" android:textColor="@color/white" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:weightSum="4" android:orientation="horizontal">
            <Button android:id="@+id/numberFour" android:layout_width="0dp" android:layout_weight="1" android:text="4" android:textColor="@color/white" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
            <Button android:id="@+id/numberFive" android:layout_width="0dp" android:layout_weight="1" android:text="5" android:textColor="@color/white" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
            <Button android:id="@+id/numberSix" android:layout_width="0dp" android:layout_weight="1" android:text="6" android:textColor="@color/white" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
            <Button android:id="@+id/multiplication" android:layout_width="0dp" android:layout_weight="1" android:text="*" android:textColor="@color/white" android:backgroundTint="#290071" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:weightSum="4" android:orientation="horizontal">
            <Button android:id="@+id/numberOne" android:layout_width="0dp" android:layout_weight="1" android:text="1" android:textColor="@color/white" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
            <Button android:id="@+id/numberTwo" android:layout_width="0dp" android:layout_weight="1" android:text="2" android:textColor="@color/white" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
            <Button android:id="@+id/numberThree" android:layout_width="0dp" android:layout_weight="1" android:text="3" android:textColor="@color/white" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
            <Button android:id="@+id/subtraction" android:layout_width="0dp" android:layout_weight="1" android:text="-" android:textColor="@color/white" android:backgroundTint="#290071" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:weightSum="4" android:orientation="horizontal">
            <Button android:id="@+id/numberZero" android:layout_width="0dp" android:layout_weight="1" android:text="0" android:textColor="@color/white" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
            <Button android:id="@+id/dot" android:layout_width="0dp" android:layout_weight="1" android:text="." android:textColor="@color/white" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
            <Button android:id="@+id/equals" android:layout_width="0dp" android:layout_weight="1" android:text="=" android:textColor="@color/white" android:backgroundTint="#0879D3" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
            <Button android:id="@+id/plus" android:layout_width="0dp" android:layout_weight="1" android:text="+" android:textColor="@color/white" android:backgroundTint="#290071" android:autoSizeTextType="uniform" android:layout_height="match_parent" android:layout_margin="2dp" tools:ignore="NestedWeights"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>